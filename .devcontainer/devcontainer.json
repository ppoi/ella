{
	"name": "ella",
	"image": "mcr.microsoft.com/devcontainers/base:alpine-3.18",
	"forwardPorts": [3000],
	"postCreateCommand": ["/usr/bin/sudo", "/sbin/apk", "add", "--no-cache", "nodejs", "npm", "git"],
	"customizations": {
		"vscode": {
			"extensions": [
				"svelte.svelte-vscode",
				"redhat.vscode-yaml",
				"uctakeoff.vscode-counter"
			]
		}
	}
}